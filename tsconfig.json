{
  "compilerOptions": {
    "baseUrl": "./",
    "incremental": false,
    "jsx": "react",
    "noEmit": false,
    "outDir": "./.storybook",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "./.storybook/*",
    "./lib/*",
    "./node_modules/*",
    "./src/**/*.stories.*",
    "./src/**/*.test.*"
  ],
  "extends": "./node_modules/eslint-config/tsconfig.json",
  "include": [
    "./src/**/*"
  ]
}
